<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img_placeholder"
            android:id="@+id/missionImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@+id/missionImage"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginTop="8dp"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent">

        <TextView
                style="@style/list_item_regular_title"
                tools:text="@string/tool_mission_name"
                android:id="@+id/missionName"/>

        <TextView
                style="@style/list_item_regular_small"
                tools:text="@string/tool_manufacturer"
                android:id="@+id/manufacturer"/>

        <TextView
                style="@style/list_item_regular_small"
                tools:text="@string/tool_nationality"
                android:id="@+id/nationality"/>

        <TextView
                style="@style/list_item_regular_small"
                tools:text="@string/tool_site_name"
                android:id="@+id/siteName"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>